@using (Html.BeginForm("BusquedaGeneral", "Home", FormMethod.Post))
{//Busqueda por Direccion
    <fieldset>
        <div class="col-lg-offset-1 col-lg-10">
            <h3 class="text-left">Dirección</h3>
            <div class="input-group">
                <input type="text" name="termino" id="termino" class="form-control input-lg" placeholder="Azcapotzalco, Calle Viveros de la floresta, San pablo... " />
                @Html.Hidden("filtro", 1)
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default btn-lg"><i class="fa fa-search texto-naranja"></i></button>
                </span>
            </div>
        </div>
    </fieldset>
}

