

@using (Html.BeginForm("BusquedaGeneral", "Home", new { page = ViewBag.Page, cantResult = ViewBag.Results, filtro = 2, buscar = ViewBag.Termino }, FormMethod.Post))
{//Busqueda por ALL
    <fieldset>
        <div class="col-lg-offset-1 col-lg-10">
            <h3 class="text-left">Fecha</h3>
            <div class="input-group">
                <input type="text" name="date" id="date" class="form-control input-lg" placeholder="Busca un incidente por cualquier dato..." data-date-end-date = "0d"/>
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default btn-lg"><i class="fa fa-search texto-naranja"></i></button>
                </span>
            </div>
        </div>
    </fieldset>
}



