@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "Crear Reporte";
}

@section Styles{
    <link href="~/Contents/css/Maps.css" rel="stylesheet" />
    <link href="~/Contents/css/Crear_Cuenta.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/Contents/js/maps-registrar.js"></script>
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Nuevo Reporte</h4>
        </div>
        <!--<form class="form-horizontal">-->
        @using (Html.BeginForm("Crear", "Reporte", FormMethod.Post))
            {
            <fieldset>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="FechaExpedicion" class="letra-prompt">Fecha de Expedicion</label>
                        <input type="datetime" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="Nombre" class="letra-prompt">Descripción</label>
                        <textarea id="Descripcion" maxlength="250" class="form-control" placeholder="Describe tu delito aquí"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Incidente" class="letra-prompt">Tipo de incidente</label>
                        @Html.DropDownList("Incidente", new SelectList(Enum.GetValues(typeof(Proyecto_Integracion.Models.TipoIncidente)), "Display"), new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="text" name="Latitud" id="Latitud" >
                    </div>
                    <div class="form-group">
                        <input type="text" name="Longitud" id="Longitud" >
                    </div>

                    <!--</form>-->
                    <div class="form-group">
                        <div class="panel panel-default mapa-mi-ubicacion">
                            <div class="panel-heading">
                                <h3 class="panel-title letra-prompt">
                                    Ubicación del incidente
                                </h3>
                            </div>
                            <div class="panel-body" id="map">
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="panel-footer text-right">
                    <input class="btn btn-primary" value="Crear" type="submit" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </fieldset>
        }

    </div>
</div>
