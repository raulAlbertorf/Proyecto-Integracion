
@{
    Layout = "~/Views/_Layout.cshtml";
}
<link href="~/Contents/css/Ingresar.css" rel="stylesheet" />
<link href="~/Contents/css/Google-Maps.css" rel="stylesheet" />
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title letra-prompt">Ingresar</h3>
        </div>
        <div class="panel-body">
            <!--<form class="form-horizontal">-->
            @using (Html.BeginForm("Ingresar", "Cuenta", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group text-center">
                        <label for="inputEmail3" class="col-sm-2 control-label input-lg letra-prompt">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control input-lg" id="Email" placeholder="Email">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group text-center">
                        <label for="inputPassword3" class="col-sm-2 control-label input-lg letra-prompt">Contraseña</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control input-lg" id="Contrasena" placeholder="Contraseña">
                        </div>
                    </div>
                </div>
                <p class="form-group text-center"><a class="letra-prompt" data-toggle="modal" data-target="#modal-contraseña">¿Olvidaste tu contraseña?</a></p>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success btn-lg letra-prompt pull-right">Ingresar</button>
                    </div>
                </div>
            }
            <!--</form>-->
        </div>
        <div class="panel-footer">
            <p><a class="letra-prompt" data-toggle="modal" data-target="#modal-registrar">Registrarme</a></p>

        </div>
    </div>
</div>


<!-- Modal Registrar -->
<div id="modal-registrar" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal Registrar-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title letra-prompt">Registrar</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group text-center">
                        <label for="inputEmail3" class="col-sm-2 control-label input-lg letra-prompt">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control input-lg" id="inputEmail3" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <label for="inputPassword3" class="col-sm-2 control-label input-lg letra-prompt">Contraseña</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control input-lg" id="inputPassword3" placeholder="Contraseña">
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <label for="inputNOmbre3" class="col-sm-2 control-label input-lg letra-prompt">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control input-lg" id="inputNombre3" placeholder="Juan Perez">
                        </div>
                    </div>
                </form>
                <div class="panel panel-default mapa-mi-ubicacion">
                    <div class="panel-heading">
                        <h3 class="panel-title letra-prompt">Mi Ubicación</h3>
                    </div>
                    <div class="panel-body" id="map">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input class="btn btn-success btn-lg letra-prompt" value="Registrame" type="submit" />
                <button type="button" class="btn btn-danger btn-lg letra-prompt" data-dismiss="modal">Cancelar</button>
            </div>

        </div>
    </div>
</div>

<!-- Modal Contraseña -->
<div id="modal-contraseña" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal Registrar-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title letra-prompt">Recuperar contraseña</h4>
            </div>
            <div class="modal-body">
                <h3 class="letra-prompt text-center">Escribe tu email para recuperar tu contraseña</h3>
                <form class="form-horizontal">
                    <div class="form-group text-center">
                        <label for="inputEmail3" class="col-sm-2 control-label input-lg letra-prompt">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control input-lg" id="inputEmail3" placeholder="Email">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input class="btn btn-success btn-lg letra-prompt" value="Aceptar" type="submit" />
                <button type="button" class="btn btn-danger btn-lg letra-prompt" data-dismiss="modal">Cancelar</button>
            </div>

        </div>
    </div>
</div>


<script>
    var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: -34.397, lng: 150.644 },
            zoom: 12
        });
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAmLtDKhJvyDq1rfqWm2wHQVU3joEs20FY&callback=initMap"
          async defer></script>